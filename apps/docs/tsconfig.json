{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"paths": { "@/*": ["./src/*"] }
	},
	"include": ["next-env.d.ts", "src", ".next/types/**/*.ts", "src/types"],
	"exclude": ["node_modules"]
}
